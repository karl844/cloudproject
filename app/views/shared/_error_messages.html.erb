<% if object.errors.any? %>
  <div id = "error_explanation">
    <h2>
      Oops! You've encountered <%= pluralize(object.errors.count, "error") %>
    </h2>
    <p>There were problems with:</p>
    <ul>
    <% object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul> 
  </div>
<% end %>
